{    
    "compilerOptions": {
        "target": "ES2017",        
        "moduleResolution": "Node",
        "module": "AMD",
        "experimentalDecorators": true,        
        "jsx": "preserve",
        "jsxFactory": "this.$render",
        "jsxFragmentFactory": "this.$render",
        "esModuleInterop": true,        
        "forceConsistentCasingInFileNames": true,        
        "declaration": false,        
        "baseUrl": "."
    },
    "include": ["src/*.tsx", "src/*.ts"],
    "exclude": ["node_modules"]
}
